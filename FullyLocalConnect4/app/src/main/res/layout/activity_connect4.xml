<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jonab.fullylocalconnect4.Connect4"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/playGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/grid"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/gameStatus"
        android:layout_width="151dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Game"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/playGrid"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playGrid"
        app:layout_constraintVertical_bias="0.0"
        tools:text="GameStats" />

    <LinearLayout
        android:id="@+id/col1"
        android:layout_width="85dp"
        android:layout_height="340dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/playGrid"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/playGrid"
        app:layout_constraintHorizontal_bias="0.049">

        <ImageView
            android:id="@+id/c0p2"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c0p3"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c0p1"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c0p0"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/col3"
        android:layout_width="85dp"
        android:layout_height="340dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/playGrid"
        app:layout_constraintLeft_toLeftOf="@+id/playGrid"
        app:layout_constraintHorizontal_bias="0.65">

        <ImageView
            android:id="@+id/c2p3"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c2p2"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c2p1"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c2p0"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <Button
        android:id="@+id/turnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doEndTurn"
        android:text="End Turn"
        app:layout_constraintBottom_toBottomOf="@+id/playGrid"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gameStatus"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/col2"
        android:layout_width="85dp"
        android:layout_height="340dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/playGrid"
        app:layout_constraintHorizontal_bias="0.349"
        app:layout_constraintRight_toRightOf="@+id/playGrid">

        <ImageView
            android:id="@+id/c1p3"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c1p2"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c1p1"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c1p0"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/col4"
        android:layout_width="84dp"
        android:layout_height="340dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.496"
        android:layout_marginRight="23dp"
        app:layout_constraintRight_toRightOf="@+id/playGrid">

        <ImageView
            android:id="@+id/c3p3"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c3p2"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c3p1"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/c3p0"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
